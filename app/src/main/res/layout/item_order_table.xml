<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/item_order_carId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="车型"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="交付时间"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="数量"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_engine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="发动机排量"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_speed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="变速器"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_wheel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="轮毅"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_control"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="中控"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_brake"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="刹车"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_hang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="悬挂"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
        <TextView
            android:id="@+id/item_order_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="状态"
            android:layout_margin="2dp"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:textColor="@color/mainColor2"/>
    </LinearLayout>

</LinearLayout>