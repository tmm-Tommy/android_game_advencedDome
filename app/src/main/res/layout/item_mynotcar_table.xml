<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/item_mynotcar_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:text="ID"
            android:textColor="@color/mainColor2" />

        <TextView
            android:id="@+id/item_mynotcar_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:text="车辆类型"
            android:textColor="@color/mainColor2" />

        <TextView
            android:id="@+id/item_mynotcar_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:text="颜色"
            android:textColor="@color/mainColor2" />

        <TextView
            android:id="@+id/item_mynotcar_notPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:text="维修费用"
            android:textColor="@color/mainColor2" />

        <Button
            android:id="@+id/item_mynotcar_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/mainColor1"
            android:gravity="center"
            android:text="维修"
            android:textColor="@color/mainColor2" />
    </LinearLayout>

</LinearLayout>